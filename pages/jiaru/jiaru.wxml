<view class="luobo">
    <swiper class="activity" next-margin="{{nextMargin}}" indicator-dots="{{indicatorDots}}"
            autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}">
      <block wx:for="{{imgUrls}}">
        <swiper-item>
          <image src="{{item}}" class="slide-image" width="355" height="155"/>
        </swiper-item>
      </block>
    </swiper>
</view>
<view class="box">
    <view class="title">
        加入我们
    </view>
    <view class="intro">
        <text>1.信息共享、经验分享</text>
        <text>2.不同思想的碰撞</text>
        <text>3.互问互答，共同进步</text>
    </view>
    <button bindtap='sure'>确定加入</button>
    
</view>
