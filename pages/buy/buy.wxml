<view class="luobo">
    <swiper class="activity" next-margin="{{nextMargin}}" indicator-dots="{{indicatorDots}}"
            autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}">
      <block wx:for="{{imgUrls}}">
        <swiper-item>
          <image src="{{item}}" class="slide-image" width="355" height="155"/>
        </swiper-item>
      </block>
    </swiper>
</view>
<view class="box">
    <view class="title">
        支付
    </view>
    <image src="../../images/11.jpeg" class='imageone'/>
    <button bindtap='sure'>确定选购</button>
</view>
