page{
    background-color: #eee;
}
.all{
    padding-top:45rpx;
    padding-left:24rpx;    
}
.all>.box{    
    width:702rpx;
    background-color: #fff;
    height:213rpx;
    margin:0 auto;
    display:flex;  
    align-items: center;
    margin-bottom: 28rpx; 
    padding:31rpx 39rpx 34rpx;
}
.all>.box>image{
    width:151rpx;
    height:151rpx;
    margin-right:45rpx;
}
.all>.box>.right{
    flex:1;
    display:flex;    
    justify-content: space-between;
    font-size:32rpx;
    color:#333;
    align-items: center;
}
.all>.box>.right>.content{
    display:flex;
    flex-direction: column;
    justify-content: space-around;
}

.all>.box>.content>.xue{
    color:#A2A2A2;
    font-size:22rpx;
}
.all>.box>.right>button{
    width:154rpx;
    height:50rpx;
    background:#FF547C;
    border-radius:6rpx;
    color:#fff;
    line-height: 50rpx;
    font-size:21rpx;
}